<Window x:Class="ECDictionary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ECDictionary"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate x:Key="WordTemplate" DataType="local:WordInfo">
                <StackPanel>
                    <TextBlock x:Name="WordBlock" Text="{Binding Contents[0]}" Visibility="{Binding Visibilities[0]}" FontWeight="Bold" FontSize="30"/>
                    <TextBlock x:Name="SwBlock" Text="{Binding Contents[1]}" Visibility="{Binding Visibilities[1]}"/>
                    <TextBlock x:Name="PhoneticContainer" Visibility="{Binding Visibilities[2]}">[<TextBlock x:Name="PhoneticBlock" Text="{Binding Contents[2]}"/>]</TextBlock>
                    <TextBlock x:Name="DefinitionBlock" Text="{Binding Contents[3]}" Visibility="{Binding Visibilities[3]}"/>
                    <TextBlock x:Name="TranslationBlock" Text="{Binding Contents[4]}" Visibility="{Binding Visibilities[4]}"/>
                    <TextBlock x:Name="PositionBlock" Text="{Binding Contents[5]}" Visibility="{Binding Visibilities[5]}"/>
                    <TextBlock x:Name="BncBlock" Text="{Binding Contents[6]}" Visibility="{Binding Visibilities[6]}"/>
                    <TextBlock x:Name="FrequencyBlock" Text="{Binding Contents[7]}" Visibility="{Binding Visibilities[7]}"/>
                    <TextBlock x:Name="ExchangeBlock" Text="{Binding Contents[8]}" Visibility="{Binding Visibilities[8]}"/>
                </StackPanel>
        </DataTemplate>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBox x:Name="SearchBox" FontWeight="Bold" FontSize="30" BorderThickness="0,0,0,1"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border x:Name="WordResultContainer" Padding="5" BorderBrush="LightGray" BorderThickness="0,0,0,1" Visibility="Collapsed">
                    <ContentControl x:Name="WordResult" ContentTemplate="{StaticResource WordTemplate}"/>
                </Border>

                <Button x:Name="MoreButton" Grid.Row="1" Margin="5" Background="Transparent" BorderThickness="0" Content="Show More" HorizontalAlignment="Center" Visibility="Collapsed"/>

                <ItemsControl x:Name="SwResults" Grid.Row="2">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="5" Padding="5" CornerRadius="10" BorderBrush="LightGray" BorderThickness="1">
                                <ContentPresenter Content="{Binding .}" ContentTemplate="{StaticResource WordTemplate}"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
